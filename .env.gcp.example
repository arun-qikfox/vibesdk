# DATABASE_URL=postgres://user:password@host:5432/vibesdk
# DEFAULT_DEPLOYMENT_TARGET=gcp-cloud-run
# GCS_TEMPLATES_BUCKET=vibesdk-templates
# FIRESTORE_PROJECT_ID=qfxcloud-app-builder
# SANDBOX_TOPIC=vibesdk-sandbox-requests
# AI_GATEWAY_URL=
# AI_GATEWAY_API_KEY=


# =========================
# GCP Configuration for Vibesdk
# =========================

# GCP Project Information
GCP_PROJECT_ID=your_project

# =========================
# Database Configuration (Cloud SQL)
# =========================

# For Cloud SQL Proxy (Recommended for local development)
# Run proxy first: gcloud sql connect vibesdk-sql --user=vibesdk-user --quiet
# Or: ./cloud-sql-proxy qfxcloud-app-builder:us-central1:vibesdk-sql --port 5432
DATABASE_URL=postgresql://user:passe@127.0.0.1:5432/vibesdk?sslmode=require
DATABASE_SSL_MODE=true

# Alternative: If you have connection string from GCP console
# DATABASE_URL=postgresql://vibesdk-user:YOUR_PASSWORD@35.223.143.45:5432/vibesdk-db?sslmode=require

# =========================
# Authentication Secrets
# =========================

# Generate a secure JWT secret (use openssl rand -base64 32)
JWT_SECRET=your_secret

# Webhook secret (for API callbacks)
WEBHOOK_SECRET=your-webhook-secret-here

# AI Proxy JWT Secret
AI_PROXY_JWT_SECRET=your-ai-proxy-secret-here

# =========================
# Google Services (OAuth)
# =========================

# Get these from GCP Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =========================
# Application Settings
# =========================

# Required email for access (optional)
ALLOWED_EMAIL=your-email@example.com

# Environment
NODE_ENV=development
RUNTIME_PROVIDER=gcp

# PORT (optional, defaults to 3001)
PORT=3001

# =========================
# Storage Configurations (Auto-configured via GCP_PROJECT_ID)
# =========================

# GCS buckets will be configured automatically
GCS_TEMPLATES_BUCKET=vibesdk-templates
GCS_PUBLIC_BUCKET=vibesdk-public
GCS_CODE_BUCKET=vibesdk-code
GCS_LOGS_BUCKET=vibesdk-logs
GCS_SCREENSHOTS_BUCKET=vibesdk-screenshots

# Firestore collection
FIRESTORE_COLLECTION=user-data

# =========================
# Rate Limiting
# =========================

RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =========================
# Optional Services
# =========================

# SendGrid for email (optional)
SENDGRID_API_KEY=your-sendgrid-api-key

# Sentry monitoring (optional)
SENTRY_DSN=your-sentry-dsn

# OpenAI API (for AI features)
OPENAI_API_KEY=your-openai-key
