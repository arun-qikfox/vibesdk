{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "dist-nodejs",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/api-types": ["src/api-types"],
      "shared": ["./shared/index.ts"],
      "shared/*": ["./shared/*"]
    }
  },
  "include": [
    "worker/**/*",
    "shared/**/*",
    "src/**/*",
    "backend/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist-*",
    "test*",
    "**/*.test.*"
  ],
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs"
    }
  }
}
